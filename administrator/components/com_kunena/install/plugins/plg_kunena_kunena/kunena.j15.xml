<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE install>
<install version="1.5" type="plugin" group="kunena" method="upgrade">
	<name>Kunena - Kunena Integration</name>
	<version>@kunenaversion@</version>
	<creationDate>@kunenaversiondate@</creationDate>
	<author>Kunena Team</author>
	<authorEmail>Kunena@kunena.org</authorEmail>
	<authorUrl>http://www.kunena.org</authorUrl>
	<copyright>www.kunena.org</copyright>
	<license>GNU/GPL</license>
	<description>PLG_KUNENA_KUNENA_DESCRIPTION</description>
	<files>
		<filename plugin="kunena">kunena.php</filename>
		<filename>index.html</filename>
		<folder>kunena</folder>
	</files>
	<params>
		<param name="avatar" type="radio" default="1" label="PLG_KUNENA_KUNENA_AVATAR" description="PLG_KUNENA_KUNENA_AVATAR_DESC">
			<option value="0">NO</option>
			<option value="1">YES</option>
		</param>
		<param name="profile" type="radio" default="1" label="PLG_KUNENA_KUNENA_PROFILE" description="PLG_KUNENA_KUNENA_PROFILE_DESC">
			<option value="0">NO</option>
			<option value="1">YES</option>
		</param>
	</params>
</install>
