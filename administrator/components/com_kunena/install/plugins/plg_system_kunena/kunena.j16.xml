<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE extension>
<extension version="1.6" type="plugin" group="system" method="upgrade">
	<name>plg_system_kunena</name>
	<version>@kunenaversion@</version>
	<creationDate>@kunenaversiondate@</creationDate>
	<author>Kunena Team</author>
	<authorEmail>Kunena@kunena.org</authorEmail>
	<authorUrl>http://www.kunena.org</authorUrl>
	<copyright>www.kunena.org</copyright>
	<license>GNU/GPL</license>
	<description>Kunena System Plugin -- Please do not unpublish or uninstall</description>
	<files>
		<filename plugin="kunena">kunena.php</filename>
	</files>
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field name="jcontentplugins" type="radio" default="0" label="PLG_SYSTEM_KUNENA_JCONTENTPLUGINS" description="PLG_SYSTEM_KUNENA_JCONTENTPLUGINS_DESC">
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>
			</fieldset>
		</fields>
	</config>
</extension>
